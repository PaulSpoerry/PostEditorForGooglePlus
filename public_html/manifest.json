{
  "manifest_version": 2,
  "name": "Post Editor for Google+â„¢",
  "version": "1.0.1",
  "default_locale": "en",
  "description": "Provide simple formatting assistance for Google+.",
  "author": "Paul Spoerry",
  "homepage_url": "http://www.paulspoerry.com/code/google-plus-editor-formatting/",
  "icons": {
    "16": "icons/gpeicon16.png",
    "48": "icons/gpeicon48.png",
